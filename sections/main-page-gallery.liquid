{%- liquid  
  if page.metafields.edcf.headline != blank
    assign headline = page.metafields.edcf.headline | strip
  else
    assign headline = page.title | split: '|' | first | strip
  endif   
-%}
<div class="page-width page-content">
  <header class="section-header text-center">
    <h1 class="section-header__title">{{ headline }}</h1>
  </header>

  <div class="rte rte--nomargin">
    {{ page.content }}
  </div>
  
  <div class="text-center">
    <a class="btn gallery-form-button" href="/pages/share-your-picture">
      <span>Share Your Picture </span>
    </a>
  </div>
  
  {% include 'page-gallery-template', section: section %}
</div>

{% schema %}
  {
    "name": "Gallery Page",
    "settings": []
  }
{% endschema %}